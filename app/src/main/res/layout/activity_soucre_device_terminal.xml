<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:background="@color/colorMain">

        <ImageView
            android:id="@+id/bt_back_personal"
            android:layout_width="20dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/pending_left_weight"
            android:src="@mipmap/top_but_back_default" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="终端详情"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize_topbar" />
        <TextView
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/et_device_name"
        android:background="@color/colorWhite"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textSize="@dimen/textsize_medium"
        android:textColor="@color/colorBlack"
        android:gravity="center_vertical"
        android:text="发送设备/音源"
        android:layout_width="match_parent"
        android:layout_height="49dp" />
    <View
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:id="@+id/rl_terminal_IP"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_ipicon"
            android:src="@mipmap/common_icon_zhongduanip_default"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_ipicon"
            android:paddingLeft="16dp"
            android:text="终端IP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_terminal_IP"
            android:layout_centerVertical="true"
            android:paddingRight="12dp"
            android:layout_toLeftOf="@+id/iv_nexticon"
            android:text="192.168.0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_nexticon"
            android:layout_alignParentRight="true"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:src="@mipmap/common_icon_jinru_default"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_alignParentBottom="true"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_source_type"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_terminalicon"
            android:src="@mipmap/common_icon_yinyuanleixing_default"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_terminalicon"
            android:paddingLeft="16dp"
            android:text="音源类型"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_nexticon3"
            android:layout_alignParentRight="true"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:src="@mipmap/common_icon_jinru_default"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_toLeftOf="@id/iv_nexticon3"
            android:id="@+id/tv_terminal_sound_cate"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:paddingRight="12dp"
            android:text="E1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_default_source"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_moyinicon"
            android:src="@mipmap/common_icon_moyinquanxian_default"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_moyinicon"
            android:paddingLeft="16dp"
            android:text="默音权限"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_terminal_priority"
            android:layout_centerVertical="true"
            android:paddingRight="12dp"
            android:layout_toLeftOf="@+id/iv_nexticon2"
            android:text="0%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_terminal_priority_hint"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <ImageView
            android:id="@+id/iv_nexticon2"
            android:layout_alignParentRight="true"
            android:layout_width="7dp"
            android:layout_height="14dp"
            android:src="@mipmap/common_icon_jinru_default"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_alignParentBottom="true"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <View
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <RelativeLayout
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_terminal_icon"
            android:src="@mipmap/common_icon_zhongduanxinghao_default"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_terminal_icon"
            android:paddingLeft="16dp"
            android:text="终端型号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_terminal_medel"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:paddingRight="12dp"
            android:text="ITC_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_banben_icon"
            android:src="@mipmap/common_icon_banbenhao_default"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_banben_icon"
            android:paddingLeft="16dp"
            android:text="版本号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_terminal_ver"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:paddingRight="12dp"
            android:text="V0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_mac_icon"
            android:src="@mipmap/common_icon_macdizhi_default"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_mac_icon"
            android:paddingLeft="16dp"
            android:text="MAC地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_terminal_mac"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:paddingRight="12dp"
            android:text="000-000-000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignParentBottom="true"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_zhuangtai_icon"
            android:src="@mipmap/common_icon_zhuangtai_default"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_zhuangtai_icon"
            android:paddingLeft="16dp"
            android:text="状态"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/terminal_deviceStatus"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:paddingRight="12dp"
            android:text="在线"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#f6f6f6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>