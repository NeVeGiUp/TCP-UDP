<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:background="@color/colorMain"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorMain">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="音乐"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />
        <ImageView
            android:src="@mipmap/top_but_add_default"
            android:id="@+id/showWindow"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_music_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/rl_create_musiclib"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="105dp">
        <RelativeLayout
            android:id="@+id/rl_importmusic_btn"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_whitebtn"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/im_icon1"
                android:layout_marginLeft="80dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/music_icon_file_default"
                android:layout_width="28dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/tv_musicinfo"
                android:paddingLeft="20dp"
                android:layout_toEndOf="@+id/im_icon1"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建音乐文件夹"
                android:textColor="#799C8C"
                />
        </RelativeLayout>
        <View
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e7e7e7" />
    </RelativeLayout>
    <ListView
        android:divider="@null"
        android:fadeScrollbars="true"
        android:background="@color/colorWhite"
        android:id="@+id/list_musiccover"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    <View
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>