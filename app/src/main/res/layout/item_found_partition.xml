<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingLeft="@dimen/pending_left_weight"
    android:paddingRight="@dimen/pending_left_weight"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/partition_content_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/partition_content_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/partitino_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="教学区-1年级教学楼"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/partitino_device_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="#888888"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_below="@+id/partition_content_ll"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E9E9E9" />

</RelativeLayout>