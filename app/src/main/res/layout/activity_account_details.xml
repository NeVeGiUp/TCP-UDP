<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMain"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorMain">
        <ImageView
            android:id="@+id/bt_back_event"
            android:layout_width="20dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/top_but_back_default" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账号详情"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textsize_topbar" />
        <TextView
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <EditText
            android:textSize="@dimen/textsize_medium"
            android:background="@null"
            android:maxLines="1"
            android:hint="请填写账号名称"
            android:layout_centerInParent="true"
            android:layout_width="320dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F6F6F6"/>
    <RelativeLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <ImageView
            android:id="@+id/im_zhanghaoicon"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:src="@mipmap/mine_icon_zhanghaoleixing_default"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/im_zhanghaoicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号类型"
            android:textColor="#666666"
            android:textSize="15sp"
            android:layout_centerVertical="true" />
        <TextView
            android:text="普通用户"
            android:paddingRight="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/im_nextbtn1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/im_nextbtn1"
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:src="@mipmap/common_icon_jinru_default"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e7e7e7">
        </View>
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <ImageView
            android:id="@+id/im_mimaicon"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:src="@mipmap/mine_icon_xitongmima_default"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/im_mimaicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="#666666"
            android:textSize="15sp"
            android:layout_centerVertical="true" />
        <TextView
            android:text="×××××××"
            android:paddingRight="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/im_nextbtn"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/im_nextbtn"
            android:layout_width="7dp"
            android:layout_height="12dp"
            android:src="@mipmap/common_icon_jinru_default"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <View
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e7e7e7">
        </View>
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="@color/colorWhite"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <ImageView
            android:id="@+id/im_zhongdunaicon"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:src="@mipmap/common_icon_xuanzezhongduan_default"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/im_zhongdunaicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可使用终端"
            android:textColor="#666666"
            android:textSize="15sp"
            android:layout_centerVertical="true" />
        <TextView
            android:text="未绑定"
            android:paddingRight="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/im_upbtn"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/im_upbtn"
            android:layout_width="12dp"
            android:layout_height="7dp"
            android:src="@mipmap/common_icon_xiala_default"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:background="#f8fcff"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/infoColor"
                android:text="已选终端"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_centerVertical="true"
                android:background="@drawable/loginout"
                android:textColor="@color/textColor"
                android:textSize="@dimen/textsize_little"
                android:layout_alignParentRight="true"
                android:text="修改"
                android:layout_width="50dp"
                android:layout_height="24dp" />
        </RelativeLayout>
        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6">
    </View>
</LinearLayout>